

<div id="preloder" >
    <div class="loader"> </div>
</div>


<div class="container-fluid">
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-3">
            <p class="category">Filtrar por status</p>
            <div class="dropdown bootstrap-select show-tick">
                <select class="selectpicker" data-style="btn btn-info"
                        multiple=""
                        title="Selecione os status" data-size="7"
                        tabindex="-98">
                    <option value="0"> NÃ£o Filtrar</option>
                    <% for(var i = 0; i < states.length; i++) { %>
                        <option
                        <% if(localStorage.getItem('orderState') !== undefined){
                        if(eval(localStorage.getItem('orderState')).includes(states[i]['id'].toString())) { %> selected
                                <% }
                                } %>
                                                                                                               value="<%= states[i]['id'] %>"> <%= states[i]['name'] %></option>
                    <% } %>

                </select>
            </div>

        </div>
        <div class="col-md-4">
            <p class="category">Buscar tudo</p>
            <input type="checkbox"
            <% if(localStorage.getItem('orderSwitch') == 'true') { %> checked
                    <% } %>
                   name="checkbox" class="bootstrap-switch"
                   data-on-label="ON"
                   data-off-label="OFF"/>
        </div>
    </div>
    <div id="orders" class="col-md-12 mb-5" style="height: 70vh; max-height: 800px ">

    </div>
<div class="mt-5"></div>
</div>

